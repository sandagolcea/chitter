<h1>Please sign up</h1>

<form action="/makers" method="post">
  Name: <input name="name" type="text" value="<%= @maker.name %>">
  Username: <input name="user_name" type="text" value="<%= @maker.user_name %>">
  Email: <input name="email" type="text" value="<%= @maker.email %>">
  Password: <input name="password" type="password">
  Password confirmation: <input name="password_confirmation" type="password">
  <input type="submit" value="Sign up">
</form>
<a href='../sessions/new'>Sign in!</a>